<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:onClick="reset"
            tools:ignore="UsingOnClickInXml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:text="@string/ponto_a"
            android:textSize="18sp"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ver"
            android:onClick="verPontoA"
            tools:ignore="OnClick,UsingOnClickInXml" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ler"
            android:onClick="lerPontoA"
            tools:ignore="HardcodedText,UsingOnClickInXml" />
            </LinearLayout>
<EditText
    android:id="@+id/edtPtoA"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:autofillHints=""
    tools:ignore="LabelFor,TextFields" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:text="@string/ponto_b"
                android:textSize="18sp"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="215dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ver"
            android:onClick="verPontoB"
            tools:ignore="HardcodedText,UsingOnClickInXml" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ler"
            android:onClick="lerPontoB"
            tools:ignore="HardcodedText,UsingOnClickInXml" />
    </LinearLayout>
        <EditText
            android:id="@+id/edtPtoB"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            tools:ignore="LabelFor,TextFields"
            android:autofillHints="" />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="CalcularDistancia"
            android:text ="@string/distancia"
            tools:ignore="UsingOnClickInXml" />



      <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webv" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>